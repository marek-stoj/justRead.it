@{
  Layout = null;
}
<!DOCTYPE html>
<html ng-app="JustReadIt">
@* ReSharper disable Html.PathError *@
<head>
  <title>justRead.it</title>

  <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />

  <link href="@Url.Content("~/Static/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
  <link href="@Url.Content("~/Static/site/css/app.css")" rel="stylesheet" />
  <link href="@Url.Content("~/Static/site/css/app-reader-normalize.css")" rel="stylesheet" />
  <link href="@Url.Content("~/Static/site/css/app-reader.css")" rel="stylesheet" />
  <link href="@Url.Content("~/Static/site/css/webkit-scrollbars.css")" rel="stylesheet" />
  
  <link href="http://fonts.googleapis.com/css?family=Cardo:400,400italic,700&subset=latin,greek-ext,greek,latin-ext" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700&subset=latin,cyrillic-ext,latin-ext,cyrillic" rel="stylesheet" type="text/css">

  <script type="text/javascript" src="@Url.Content("~/Static/jquery/jquery-1.10.2.min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/bootstrap/js/bootstrap.min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/angularjs/angular.min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/angularjs/angular-resource.min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/ui-bootstrap/ui-bootstrap-0.5.0.min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/underscore/underscore-min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/ngUpload/ng-upload.min.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/app.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/AppController.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/SubscriptionsListController.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/FeedItemsController.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/FeedItemReaderController.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/AddSubscriptionController.js")"></script>
  <script type="text/javascript" src="@Url.Content("~/Static/site/js/app/ImportSubscriptionsController.js")"></script>
</head>
<body ng-controller="AppController">
  
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a href="@Url.Content("~/")" class="brand">JustReadIt</a>
        <ul class="nav pull-right">
          <li>
            <a href="#" ng-click="openImportSubscriptionsModal()">Import Subscriptions</a>
          </li>
          <li>
            @Html.ActionLink("Sign Out", "SignOut", "Account")
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div id="content-container">
    <div id="left-panel-container" ng-controller="SubscriptionsListController">
      <div>
        <form class="form-inline">
          <button type="button" class="btn" ng-click="openAddSubscriptionModal()">
            <i class="icon icon-plus-sign"></i>
          </button>
          <label class="checkbox">
            <input type="checkbox" name="showFeedsWithoutUnreadItems" ng-model="showFeedsWithoutUnreadItems" /> Show empty feeds
          </label>
        </form>
        <hr />
      </div>
      <div id="subscrs-list-container">
        <div id="subscrs-list">
          <ul class="nav nav-list" ng-repeat="subscrGroup in subscrsList.groups">
            <li class="nav-header single-line">
              <span class="subscr-group-header">
                {{subscrGroup.title}}
              </span>
            </li>
            <li class="nothing-to-see" ng-hide="subscrGroup.containsVisibleFeeds()">
              Nothing to see here
            </li>
            <li ng-class="{'active': subscr.isSelected, 'contains-unread-items': subscr.containsUnreadItems()}" ng-show="subscr.isVisible()" ng-repeat="subscr in subscrGroup.subscriptions">
              <a href="#" class="single-line" ng-click="selectSubscr(subscr)">
                <span class="unread-items-count">
                  {{subscr.unreadItemsCount}}
                </span>
                <img class="icon-dynamic-favicon" ng-src="@Url.Action("GetFavicon")?url={{subscr.siteUrl}}" />
                <span class="subscr-title">
                  {{subscr.title}}
                </span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div id="right-panel-container" ng-controller="FeedItemsController">
      <div id="right-panel-header-container">
        <div id="selected-subscr-container" ng-show="selectedSubscr">
          <div class="row">
            <div class="span5">
              <h2 class="selected-subscr-title">
                {{selectedSubscr.title}}
              </h2>
            </div>
            <div class="span2">
              <a ng-href="{{selectedSubscr.siteUrl}}" target="_blank">
                <i class="icon-globe"></i> Visit Site
              </a>
            </div>
          </div>
          <div class="row">
            <div class="span8">
              <form class="form-inline pull-right">
                <label class="checkbox">
                  <input type="checkbox" name="showReadItems" ng-model="showReadItems" /> Show seen items
                </label>
                <button type="button" class="btn" ng-click="markAllItemsAsRead()">Mark all as seen</button>
              </form>
            </div>
          </div>
          <hr />
        </div>
      </div>
      <div id="feed-items-list-container">
        <div id="feed-items-list">
          <div class="nothing-to-see" ng-show="!showReadItems && !feedItemsList.containsUnreadItems()">
            Nothing to see here
          </div>
          <div class="feed-item-container" ng-class="{'is-read': feedItem.isRead}" ng-repeat="feedItem in feedItemsList.items">
            <div class="feed-item" ng-click="showFeedItem(feedItem)">
              <h3 class="feed-item-title">{{feedItem.title}}</h3>
              <p>{{feedItem.date}}</p>
              <p class="feed-item-summary">
                {{feedItem.summary}}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  @Html.Partial("Partials/FeedItemReader")
  
  @Html.Partial("Partials/AddSubscriptionDialog")

  @Html.Partial("Partials/ImportSubscriptionsDialog")

  @Html.Partial("Partials/Footer")

</body>
@* ReSharper restore Html.PathError *@
</html>
